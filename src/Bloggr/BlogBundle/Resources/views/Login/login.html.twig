{% extends "::base.html.twig" %}



{% block body %}
<div class="container">
    <div class="row ">
        <div class="box">

            <hr>
            <h2 class="intro-text text-center">Contact
                <strong>form</strong>
            </h2>
            <hr>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

                <form action="{{ path('login') }}" method="post">

                        <div class="row ">
                            <div class="form-group col-md-4 col-md-offset-4 ">
                                <label>Username</label>
                                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4 col-md-offset-4">
                                <label>Password</label>
                                <input type="password" class="form-control"  id="password" name="_password" >
                            </div>
                        </div>

                        <button type="submit" class="btn btn-default col-md-offset-4">Submit</button>
                </form>

            <div class=" col-4 col-md-offset-4">
                <a href="{{ path('check_in') }}" class="badge badge-light">Creat your profile.</a>
            </div>

        </div>
    </div>
</div>
{% endblock %}
